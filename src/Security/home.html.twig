{% extends 'base.html.twig' %}

{% block title %}Banking System - Accueil{% endblock %}

{% block body %}
    <div class="min-vh-100 d-flex align-items-center bg-light">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-8">
                    <h1 class="display-3 fw-bold text-primary mb-4">
                        Banking System
                    </h1>
                    <p class="lead text-muted mb-5">
                        Gérez vos finances en toute sécurité avec notre plateforme bancaire moderne
                    </p>

                    <div class="row g-4 mb-5">
                        <div class="col-md-6">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-body d-flex flex-column">
                                    <div class="flex-grow-1">
                                        <h3 class="card-title text-primary">Espace Client</h3>
                                        <p class="card-text text-muted">
                                            Accédez à vos comptes, virements, services et historique
                                        </p>
                                    </div>
                                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg mt-3">
                                        Se connecter
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-body d-flex flex-column">
                                    <div class="flex-grow-1">
                                        <h3 class="card-title text-success">Administration</h3>
                                        <p class="card-text text-muted">
                                            Gestion des clients, services et transactions
                                        </p>
                                    </div>
                                    <a href="{{ path('app_login') }}" class="btn btn-success btn-lg mt-3">
                                        Accéder à l'administration
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted">
                            Pas encore de compte ?
                            <a href="{{ path('app_register') }}" class="fw-bold text-primary">
                                Créer un compte client gratuitement
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}