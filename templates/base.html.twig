<!DOCTYPE html>
<html lang="fr" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Banking System{% endblock %}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-lg bg-primary navbar-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <i class="fas fa-piggy-bank me-2"></i>Banking System
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            {% if is_granted('IS_AUTHENTICATED_FULLY') or is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request and app.request.get('_route') == 'admin_dashboard' ? 'active' : '' }}" 
                               href="{{ path('admin_dashboard') }}">
                                <i class="fas fa-tachometer-alt me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request and app.request.get('_route') == 'admin_accounts' ? 'active' : '' }}" 
                               href="{{ path('admin_accounts') }}">
                                <i class="fas fa-wallet me-1"></i> Tous les Comptes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request and app.request.get('_route') == 'admin_clients' ? 'active' : '' }}" 
                               href="{{ path('admin_clients') }}">
                                <i class="fas fa-users me-1"></i> Clients
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link {{ app.request and app.request.get('_route') starts with 'client_transaction' ? 'active' : '' }}"
                                href="{{ path('client_transactions_index') }}">
                                <i class="fas fa-exchange-alt me-1"></i> Transactions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request and app.request.get('_route') == 'client_accounts' ? 'active' : '' }}" 
                               href="{{ path('client_accounts') }}">
                                <i class="fas fa-wallet me-1"></i> Mes Comptes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request and app.request.get('_route') == 'client_services' ? 'active' : '' }}"
                                href="{{ path('client_services') }}">
                                <i class="fas fa-cogs me-1"></i> Services
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('client_profile') }}">
                                <i class="fas fa-user me-1"></i> Mon Profil
                            </a>
                        </li>
                        <li class="nav-item">
    <a class="nav-link {{ app.request and app.request.get('_route') == 'client_my_subscriptions' ? 'active' : '' }}" 
       href="{{ path('client_my_subscriptions') }}">
        <i class="fas fa-bell me-1"></i> Mes Abonnements
    </a>
</li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user me-1"></i> 
                            {% if app.user %}
                                {# SAFE USER DISPLAY - Works for both Admin and Client #}
                                {% if app.user.fullName is defined %}
                                    {{ app.user.fullName }}
                                {% elseif app.user.prenom is defined %}
                                    {{ app.user.prenom }} {{ app.user.nom }}
                                {% elseif app.user.firstName is defined %}
                                    {{ app.user.firstName }} {{ app.user.lastName }}
                                {% else %}
                                    {{ app.user.email }}
                                {% endif %}
                            {% endif %}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a class="dropdown-item" href="{{ path('admin_dashboard') }}">
                                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                                </a></li>
                            {% else %}
                                <li><a class="dropdown-item" href="{{ path('client_accounts') }}">
                                    <i class="fas fa-wallet me-2"></i>Mes Comptes
                                </a></li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">
                                <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                            </a></li>
                        </ul>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link {{ app.request and app.request.get('_route') == 'app_home' ? 'active' : '' }}" 
                           href="{{ path('app_home') }}">
                            <i class="fas fa-home me-1"></i> Accueil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request and app.request.get('_route') == 'app_login' ? 'active' : '' }}" 
                           href="{{ path('app_login') }}">
                            <i class="fas fa-sign-in-alt me-1"></i> Connexion
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request and app.request.get('_route') == 'app_register' ? 'active' : '' }}" 
                           href="{{ path('app_register') }}">
                            <i class="fas fa-user-plus me-1"></i> Inscription
                        </a>
                    </li>
                </ul>
            {% endif %}
        </div>
    </div>
</nav>

<main class="container py-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}

    {% block body %}{% endblock %}
</main>

<footer class="bg-dark text-light py-4 mt-auto">
    <div class="container text-center">
        <p>&copy; {{ "now"|date("Y") }} Banking System. Tous droits réservés.</p>
    </div>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}{% endblock %}
</body>
</html>