{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - Banking System{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-key me-2"></i>Réinitialisation du mot de passe
                    </h4>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-4">
                        Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </p>

                    {{ form_start(requestForm) }}
                    <div class="mb-3">
                        {{ form_row(requestForm.email) }}
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-paper-plane me-2"></i>Envoyer le lien de réinitialisation
                        </button>
                    </div>
                    {{ form_end(requestForm) }}

                    <hr class="my-4">

                    <div class="text-center">
                        <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}