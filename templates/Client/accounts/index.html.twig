{% extends 'base.html.twig' %}

{% block title %}Mes Comptes • Banking System{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3 mb-0">
                <i class="fas fa-wallet text-primary me-3"></i>Mes Comptes Bancaires
            </h2>
            <div>
               <a href="{{ path('client_account_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Ouvrir un nouveau compte
               </a>
            </div>
            <div>
                <span class="badge bg-success fs-6">Solde total : {{ totalBalance|number_format(2, ',', ' ')}} €</span>
            </div>
        </div>

        <div class="row g-4">
            {% for account in accounts %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 hover-shadow transition">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">{{ account.getTypeLabel() }}</h5>
                                    <small class="text-muted">{{ account.accountNumber }}</small>
                                </div>
                                <span class="badge bg-{{ account.type == 'checking' ? 'primary' : 'info' }} rounded-pill">
                                    {{ account.getTypeLabel() }}
                                </span>
                            </div>

                            <div class="mt-auto">
                                <h3 class="text-primary fw-bold mb-2">
                                    {{ account.balance|number_format(2, ',', ' ')}} €
                                </h3>
                                <small class="text-muted">
                                    Découvert autorisé : {{ account.overdraftLimit|number_format(2, ',', ' ') }} €
                                    → Disponible : <strong>{{ (account.balance + account.overdraftLimit)|number_format(2, ',', ' ')}} €</strong>
                                </small>
                            </div>

                            <div class="mt-4 d-flex gap-2">
                                <a href="{{ path('client_account_show', {'id': account.id}) }}" class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="fas fa-eye me-1"></i> Voir
                                </a>
                                <a href="{{ path('client_account_transactions', {'id': account.id}) }}" class="btn btn-outline-secondary btn-sm flex-fill">
                                    <i class="fas fa-history me-1"></i> Historique
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center py-5">
                        <i class="fas fa-info-circle fa-3x mb-3"></i>
                        <h4>Aucun compte actif</h4>
                        <p>Contactez votre conseiller pour ouvrir un compte.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hover-shadow { transition: all 0.3s ease; }
        .hover-shadow:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; }
        .transition { transition: all 0.3s ease; }
    </style>
{% endblock %}