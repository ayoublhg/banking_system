{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe • Banking System{% endblock %}

{% block body %}
<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('client_profile') }}">Mon Profil</a></li>
            <li class="breadcrumb-item active">Changer le mot de passe</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-key me-2"></i>Changer le mot de passe
                    </h4>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i> {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i> {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.currentPassword, null, {
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                            {{ form_widget(form.currentPassword, {
                                'attr': {'class': 'form-control'}
                            }) }}
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Entrez votre mot de passe actuel pour vérification.
                            </div>
                            {{ form_errors(form.currentPassword) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.plainPassword.first, null, {
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                            {{ form_widget(form.plainPassword.first, {
                                'attr': {'class': 'form-control'}
                            }) }}
                            <div class="form-text">
                                <i class="fas fa-lock me-1"></i>
                                Le mot de passe doit contenir au moins 6 caractères.
                            </div>
                            {{ form_errors(form.plainPassword.first) }}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.plainPassword.second, null, {
                                'label_attr': {'class': 'form-label fw-bold'}
                            }) }}
                            {{ form_widget(form.plainPassword.second, {
                                'attr': {'class': 'form-control'}
                            }) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Changer le mot de passe
                            </button>
                            <a href="{{ path('client_profile') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i>Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}