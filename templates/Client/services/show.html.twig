{% extends 'base.html.twig' %}

{% block title %}{{ service.name }} • Banking System{% endblock %}

{% block body %}
<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('client_services') }}">Services</a></li>
            <li class="breadcrumb-item active">{{ service.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                {% if service.image %}
                    <img src="{{ vich_uploader_asset(service, 'imageFile') }}" 
                         class="card-img-top" 
                         alt="{{ service.name }}"
                         style="height: 300px; object-fit: cover;">
                {% else %}
                    <div class="card-img-top bg-gradient-primary d-flex align-items-center justify-content-center" 
                         style="height: 300px;">
                        <i class="fas fa-{{ service.name|lower matches '/premium|vip|gold|exclusive/' ? 'crown' : 'cog' }} fa-5x text-white"></i>
                    </div>
                {% endif %}
                
                <div class="card-body">
                    <h1 class="card-title h3">{{ service.name }}</h1>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="text-primary mb-0">
                                {% if service.price > 0 %}
                                    {{ service.price|number_format(2, ',', ' ') }} €
                                    <small class="text-muted fs-6">/mois</small>
                                {% else %}
                                    <span class="text-success">Gratuit</span>
                                {% endif %}
                            </h2>
                        </div>
                        <span class="badge bg-{{ service.isActive ? 'success' : 'secondary' }} fs-6">
                            {{ service.isActive ? 'Disponible' : 'Indisponible' }}
                        </span>
                    </div>
                    
                    <h5 class="mb-3"><i class="fas fa-info-circle me-2"></i>Description</h5>
                    <p class="card-text fs-5">{{ service.description|nl2br }}</p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-rocket me-2"></i>Souscrire</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h3 class="text-primary">
                            {% if service.price > 0 %}
                                {{ service.price|number_format(2, ',', ' ') }} €
                                <small class="text-muted fs-6">/mois</small>
                            {% else %}
                                <span class="text-success">Gratuit</span>
                            {% endif %}
                        </h3>
                        <p class="text-muted">Facturé mensuellement</p>
                    </div>
                    
                    {% if client.isSubscribedToService(service) %}
                        <div class="alert alert-success text-center">
                            <i class="fas fa-check-circle fa-2x mb-3"></i>
                            <h5>Vous êtes déjà abonné</h5>
                            <p class="mb-0">Ce service est actif sur votre compte.</p>
                        </div>
                        
                        <form action="{{ path('client_service_unsubscribe', {'id': service.id}) }}" method="POST" class="d-grid">
                            <input type="hidden" name="_token" value="{{ csrf_token('unsubscribe' ~ service.id) }}">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-times me-1"></i> Se désabonner
                            </button>
                        </form>
                    {% else %}
                        <form action="{{ path('client_service_subscribe', {'id': service.id}) }}" method="POST" class="d-grid">
                            <input type="hidden" name="_token" value="{{ csrf_token('subscribe' ~ service.id) }}">
                            <button type="submit" class="btn btn-{{ service.price > 0 ? 'primary' : 'success' }} btn-lg">
                                <i class="fas fa-check me-1"></i> 
                                {% if service.price > 0 %}
                                    S'abonner maintenant
                                {% else %}
                                    Activer gratuitement
                                {% endif %}
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}