{% extends 'base.html.twig' %}

{% block title %}Dépôt • Banking System{% endblock %}

{% block body %}
<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('client_accounts') }}">Mes Comptes</a></li>
            <li class="breadcrumb-item"><a href="{{ path('client_transactions_index') }}">Transactions</a></li>
            <li class="breadcrumb-item active">Dépôt</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Effectuer un Dépôt</h4>
                </div>
                <div class="card-body">
                    {% if accounts|length == 0 %}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Vous n'avez aucun compte actif. Contactez votre conseiller.
                        </div>
                    {% else %}
                        <form method="POST" action="{{ path('client_transaction_deposit') }}">
                            <div class="mb-3">
                                <label for="account" class="form-label">Compte de destination *</label>
                                <select class="form-control" id="account" name="account" required>
                                    <option value="">Sélectionnez un compte</option>
                                    {% for account in accounts %}
                                        <option value="{{ account.id }}">
                                            {{ account.getTypeLabel() }} - {{ account.accountNumber }}
                                            (Solde: {{ account.balance|number_format(2, ',', ' ') }} €)
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                            
                            <div class="mb-3">
                                <label for="amount" class="form-label">Montant (€) *</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" id="amount" name="amount" 
                                           step="0.01" min="0.01" required 
                                           placeholder="Ex: 150.50">
                                    <span class="input-group-text">€</span>
                                </div>
                                <div class="form-text">Montant minimum: 0.01€</div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="description" class="form-label">Description (optionnel)</label>
                                <textarea class="form-control" id="description" name="description" 
                                          rows="3" placeholder="Ex: Dépôt d'espèces au guichet"></textarea>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fas fa-check me-2"></i>Effectuer le dépôt
                                </button>
                                <a href="{{ path('client_transactions_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>Annuler
                                </a>
                            </div>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}