{% extends 'base.html.twig' %}

{% block title %}Service {{ service.name }} • Banking System{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_services') }}">Services</a></li>
            <li class="breadcrumb-item active">{{ service.name }}</li>
        </ol>
    </nav>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-cog text-primary me-2"></i>{{ service.name }}
                    </h5>
                    <span class="badge {{ service.isActive ? 'bg-success' : 'bg-secondary' }}">
                        {{ service.isActive ? 'Actif' : 'Inactif' }}
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6>Description</h6>
                        <p class="text-muted">{{ service.description|default('Aucune description') }}</p>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6>Prix</h6>
                                <p class="fs-4">{{ service.price|number_format(2, ',', ' ') }} € / mois</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6>Clients abonnés</h6>
                                <p class="fs-4">
                                    {{ service.clients|length }} client(s)
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6>Créé le</h6>
                                <p>{{ service.createdAt|date('d/m/Y H:i') }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6>Dernière modification</h6>
                                <p>{{ service.updatedAt|date('d/m/Y H:i') }}</p>
                            </div>
                        </div>
                    </div>
                    
                    {% if service.image %}
                    <div class="mt-3">
                        <h6>Image</h6>
                        <img src="{{ vich_uploader_asset(service, 'imageFile') }}" 
                             alt="{{ service.name }}" 
                             class="img-thumbnail" 
                             style="max-width: 200px;">
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_service_edit', {'id': service.id}) }}" 
                           class="btn btn-outline-primary text-start">
                            <i class="fas fa-edit me-2"></i> Modifier
                        </a>
                        
                        <form method="post" 
                              action="{{ path('admin_service_delete', {'id': service.id}) }}"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce service ? Cette action supprimera également toutes les souscriptions des clients à ce service.');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                            <button type="submit" class="btn btn-outline-danger text-start w-100">
                                <i class="fas fa-trash me-2"></i> Supprimer
                            </button>
                        </form>
                        
                        <a href="{{ path('admin_services') }}" class="btn btn-outline-secondary text-start">
                            <i class="fas fa-arrow-left me-2"></i> Retour aux services
                        </a>
                    </div>
                </div>
            </div>
            
            {% if service.clients|length > 0 %}
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Clients abonnés</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        {% for client in service.clients %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            {{ client.fullName }}
                            <span class="badge bg-primary">{{ client.email }}</span>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}