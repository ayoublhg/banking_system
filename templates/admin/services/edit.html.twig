{% extends 'base.html.twig' %}

{% block title %}Modifier {{ service.name }} • Banking System{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_services') }}">Services</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_service_show', {'id': service.id}) }}">{{ service.name }}</a></li>
            <li class="breadcrumb-item active">Modifier</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-edit text-primary me-2"></i>Modifier "{{ service.name }}"
                    </h5>
                    <span class="badge {{ service.isActive ? 'bg-success' : 'bg-secondary' }}">
                        {{ service.isActive ? 'Actif' : 'Inactif' }}
                    </span>
                </div>
                
                <div class="card-body">
                    {{ form_start(form) }}
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_label(form.name, 'Nom du service', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.name) }}</div>
                        </div>
                        
                        <div class="col-md-6">
                            {{ form_label(form.price, 'Prix mensuel (€)', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="input-group">
                                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                                <span class="input-group-text">€</span>
                            </div>
                            <div class="text-danger">{{ form_errors(form.price) }}</div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        <div class="text-danger">{{ form_errors(form.description) }}</div>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="form-check form-switch mb-3">
                                {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                                {{ form_label(form.isActive, 'Service actif', {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                            <div class="text-danger">{{ form_errors(form.isActive) }}</div>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Désactivez pour masquer ce service aux clients
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            {{ form_label(form.imageFile, 'Image du service', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.imageFile) }}</div>
                            
                            {% if service.image %}
                                <div class="mt-3">
                                    <p class="mb-2"><strong>Image actuelle :</strong></p>
                                    <img src="{{ vich_uploader_asset(service, 'imageFile') }}" 
                                         alt="{{ service.name }}" 
                                         class="img-thumbnail" 
                                         style="max-width: 200px;">
                                    <div class="form-text mt-2">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Laissez vide pour conserver l'image actuelle
                                    </div>
                                </div>
                            {% else %}
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Aucune image actuellement
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between border-top pt-3">
                        <div>
                            <a href="{{ path('admin_service_show', {'id': service.id}) }}" class="btn btn-outline-secondary me-2">
                                <i class="fas fa-eye me-2"></i> Voir
                            </a>
                            <a href="{{ path('admin_services') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Liste
                            </a>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Enregistrer
                            </button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}