{% extends 'base.html.twig' %}

{% block title %}Détails Client • {{ client.email }} • Banking System{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item">
                        <a href="{{ path('admin_dashboard') }}">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('admin_clients') }}">Clients</a>
                    </li>
                    <li class="breadcrumb-item active">{{ client.email }}</li>
                </ol>
            </nav>
            <h1 class="h3 fw-bold mb-0">
                <i class="fas fa-user text-primary me-2"></i>{{ client.firstName }} {{ client.lastName }}
            </h1>
        </div>
        <div>
            {% if 'ROLE_ADMIN' in client.roles %}
                <span class="badge bg-danger fs-6">Administrateur</span>
            {% else %}
                <span class="badge bg-primary fs-6">Client</span>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <!-- Client Info -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Informations client</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-4 mb-3">
                            <i class="fas fa-user fa-3x text-primary"></i>
                        </div>
                        <h4>{{ client.firstName }} {{ client.lastName }}</h4>
                        <p class="text-muted">{{ client.email }}</p>
                    </div>

                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>ID Client</span>
                            <strong>#{{ client.id }}</strong>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Comptes</span>
                            <span class="badge bg-info">{{ client.accounts|length }}</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Transactions</span>
                            <span class="badge bg-secondary">{{ client.transactions|length }}</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Dernière activité</span>
                            <small class="text-muted">Aujourd'hui</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Actions rapides</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary text-start">
                            <i class="fas fa-envelope me-2"></i> Envoyer un email
                        </button>
                        <button class="btn btn-outline-success text-start">
                            <i class="fas fa-plus-circle me-2"></i> Créer un compte
                        </button>
                        <button class="btn btn-outline-warning text-start">
                            <i class="fas fa-lock me-2"></i> Réinitialiser le mot de passe
                        </button>
                        <button class="btn btn-outline-danger text-start">
                            <i class="fas fa-ban me-2"></i> Désactiver le compte
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Accounts & Activity -->
        <div class="col-lg-8">
            <!-- Accounts -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-wallet me-2"></i>Comptes bancaires</h5>
                    <button class="btn btn-sm btn-primary">
                        <i class="fas fa-plus me-1"></i> Ajouter un compte
                    </button>
                </div>
                <div class="card-body">
                    {% if client.accounts|length > 0 %}
                        <div class="row g-3">
                            {% for account in client.accounts %}
                            <div class="col-md-6">
                                <div class="card border">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h6 class="mb-1">{{ account.typeLabel }}</h6>
                                                <small class="text-muted">{{ account.accountNumber }}</small>
                                            </div>
                                            <span class="badge {{ account.isActive ? 'bg-success' : 'bg-danger' }}">
                                                {{ account.isActive ? 'Actif' : 'Inactif' }}
                                            </span>
                                        </div>
                                        <h4 class="mb-2 {{ account.balance >= 0 ? 'text-success' : 'text-danger' }}">
                                            {{ account.balance|number_format(2, ',', ' ') }} €
                                        </h4>
                                        <div class="d-flex justify-content-between small text-muted">
                                            <span>Découvert: {{ account.overdraftLimit }} €</span>
                                            <span>Créé: {{ account.createdAt|date('d/m/Y') }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-wallet fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun compte</h5>
                            <p class="text-muted">Ce client n'a pas encore de compte bancaire.</p>
                            <button class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i> Créer un compte
                            </button>
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Recent Transactions -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Dernières transactions</h5>
                </div>
                <div class="card-body">
                    {% if client.transactions|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Compte</th>
                                        <th>Type</th>
                                        <th>Montant</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for transaction in client.transactions|slice(0, 5) %}
                                    <tr>
                                        <td>{{ transaction.createdAt|date('d/m H:i') }}</td>
                                        <td>
                                            <small class="text-muted">{{ transaction.account.accountNumber|slice(0, 8) }}...</small>
                                        </td>
                                        <td>
                                            <span class="badge {{ transaction.type == 'deposit' ? 'bg-success' : 'bg-danger' }}">
                                                {{ transaction.typeLabel }}
                                            </span>
                                        </td>
                                        <td class="{{ transaction.type == 'deposit' ? 'text-success' : 'text-danger' }}">
                                            {{ transaction.formattedAmount }}
                                        </td>
                                        <td>{{ transaction.description|default('N/A')|slice(0, 20) }}...</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% if client.transactions|length > 5 %}
                            <div class="text-center mt-3">
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    Voir toutes les transactions ({{ client.transactions|length }})
                                </a>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="text-center py-3">
                            <i class="fas fa-exchange-alt fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-0">Aucune transaction</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}