{% extends 'base.html.twig' %}

{% block title %}Détails Client • {{ client.email }} • Banking System{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item">
                        <a href="{{ path('admin_dashboard') }}">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('admin_clients') }}">Clients</a>
                    </li>
                    <li class="breadcrumb-item active">{{ client.email }}</li>
                </ol>
            </nav>
            <h1 class="h3 fw-bold mb-0">
                <i class="fas fa-user text-primary me-2"></i>{{ client.firstName }} {{ client.lastName }}
            </h1>
        </div>
        <div>
            {% if 'ROLE_ADMIN' in client.roles %}
                <span class="badge bg-danger fs-6">Administrateur</span>
            {% else %}
                <span class="badge bg-primary fs-6">Client</span>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <!-- Client Info -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-id-card me-2"></i>Informations client</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex p-4 mb-3">
                            <i class="fas fa-user fa-3x text-primary"></i>
                        </div>
                        <h4>{{ client.firstName }} {{ client.lastName }}</h4>
                        <p class="text-muted">{{ client.email }}</p>
                        {% if client.phone is defined and client.phone %}
                            <p class="text-muted"><i class="fas fa-phone me-1"></i> {{ client.phone }}</p>
                        {% endif %}
                    </div>

                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>ID Client</span>
                            <strong>#{{ client.id }}</strong>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Comptes</span>
                            <span class="badge bg-info">{{ accounts|length }}</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Transactions récentes</span>
                            <span class="badge bg-secondary">{{ transactions|length }}</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Date d'inscription</span>
                            <small class="text-muted">{{ client.createdAt|date('d/m/Y') }}</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Actions rapides</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <!-- SUPPRIMÉ : Bouton "Créer un compte" -->
                        
                        <form action="{{ path('admin_client_reset_password', {'id': client.id}) }}" 
                              method="POST" 
                              class="d-inline"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir réinitialiser le mot de passe ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('reset-password' ~ client.id) }}">
                            <button type="submit" class="btn btn-outline-warning text-start w-100">
                                <i class="fas fa-lock me-2"></i> Réinitialiser le mot de passe
                            </button>
                        </form>
                        
                        {% if attribute(client, 'isActive') is defined %}
                            <form action="{{ path('admin_client_toggle_status', {'id': client.id}) }}" 
                                  method="POST" 
                                  class="d-inline"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir {{ client.isActive ? 'désactiver' : 'activer' }} ce client ?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle-status' ~ client.id) }}">
                                <button type="submit" class="btn btn-outline-danger text-start w-100">
                                    <i class="fas {{ client.isActive ? 'fa-ban' : 'fa-check' }} me-2"></i> 
                                    {{ client.isActive ? 'Désactiver' : 'Activer' }} le compte
                                </button>
                            </form>
                        {% endif %}
                        
                        <form action="{{ path('admin_client_delete', {'id': client.id}) }}" 
                              method="POST" 
                              class="d-inline"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                            <button type="submit" class="btn btn-outline-danger text-start w-100">
                                <i class="fas fa-trash me-2"></i> Supprimer le client
                            </button>
                        </form>
                        
                        <a href="{{ path('admin_client_edit', {'id': client.id}) }}" 
                           class="btn btn-outline-primary text-start">
                            <i class="fas fa-edit me-2"></i> Modifier les informations
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Accounts & Activity -->
        <div class="col-lg-8">
            <!-- Accounts -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-wallet me-2"></i>Comptes bancaires</h5>
                    <!-- SUPPRIMÉ : Bouton "Ajouter un compte" -->
                </div>
                <div class="card-body">
                    {% if accounts|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>N° de compte</th>
                                        <th>Type</th>
                                        <th>Solde</th>
                                        <th>Statut</th>
                                        <th>Créé le</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for account in accounts %}
                                    <tr>
                                        <td><code>{{ account.accountNumber }}</code></td>
                                        <td>
                                            {% if account.type == 'current' %}
                                                <span class="badge bg-primary">Courant</span>
                                            {% elseif account.type == 'savings' %}
                                                <span class="badge bg-success">Épargne</span>
                                            {% else %}
                                                {{ account.type }}
                                            {% endif %}
                                        </td>
                                        <td class="fw-bold {{ account.balance >= 0 ? 'text-success' : 'text-danger' }}">
                                            {{ account.balance|number_format(2, ',', ' ') }} €
                                        </td>
                                        <td>
                                            {% if account.isActive %}
                                                <span class="badge bg-success">Actif</span>
                                            {% else %}
                                                <span class="badge bg-danger">Inactif</span>
                                            {% endif %}
                                        </td>
                                        <td>{{ account.createdAt|date('d/m/Y') }}</td>
                                        <td>
                                            <a href="{{ path('admin_account_show', {'id': account.id}) }}" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('admin_account_transactions', {'id': account.id}) }}" 
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-exchange-alt"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-wallet fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucun compte</h5>
                            <p class="text-muted">Ce client n'a pas encore de compte bancaire.</p>
                            <!-- SUPPRIMÉ : Bouton "Créer un compte" -->
                        </div>
                    {% endif %}
                </div>
            </div>

            <!-- Recent Transactions -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Dernières transactions</h5>
                </div>
                <div class="card-body">
                    {% if transactions|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Compte</th>
                                        <th>Type</th>
                                        <th>Montant</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for transaction in transactions|slice(0, 10) %}
                                    <tr>
                                        <td>{{ transaction.createdAt|date('d/m/Y H:i') }}</td>
                                        <td>
                                            {% if transaction.account %}
                                                <small class="text-muted">{{ transaction.account.accountNumber }}</small>
                                            {% else %}
                                                <small class="text-muted">-</small>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if transaction.type == 'deposit' %}
                                                <span class="badge bg-success">Dépôt</span>
                                            {% elseif transaction.type == 'withdrawal' %}
                                                <span class="badge bg-danger">Retrait</span>
                                            {% elseif transaction.type == 'transfer' %}
                                                <span class="badge bg-info">Virement</span>
                                            {% else %}
                                                <span class="badge bg-secondary">{{ transaction.type }}</span>
                                            {% endif %}
                                        </td>
                                        <td class="fw-bold {{ transaction.type == 'deposit' ? 'text-success' : 'text-danger' }}">
                                            {% if transaction.type == 'deposit' %}+{% else %}-{% endif %}
                                            {{ transaction.amount|number_format(2, ',', ' ') }} €
                                        </td>
                                        <td>{{ transaction.description|default('N/A') }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% if transactions|length > 10 %}
                            <div class="text-center mt-3">
                                <a href="{{ path('admin_transactions') }}?client_id={{ client.id }}" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-list me-1"></i> Voir toutes les transactions ({{ transactions|length }})
                                </a>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aucune transaction</h5>
                            <p class="text-muted">Ce client n'a effectué aucune transaction.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}