{% extends 'base.html.twig' %}

{% block title %}Gestion des Clients • Banking System{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 fw-bold mb-1">
                <i class="fas fa-users text-primary me-2"></i>Clients
            </h1>
            <p class="text-muted mb-0">{{ clients|length }} clients inscrits</p>
        </div>

    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            {% if clients|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Client</th>
                                <th>Email</th>
                                <th>Comptes</th>
                                <th>Transactions</th>
                                <th>Inscrit le</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for client in clients %}
                            <tr>
                                <td>#{{ client.id }}</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                            <i class="fas fa-user text-primary"></i>
                                        </div>
                                        <div>
                                            <strong>{{ client.firstName }} {{ client.lastName }}</strong>
                                            <div class="small text-muted">
                                                {% if 'ROLE_ADMIN' in client.roles %}
                                                    <span class="badge bg-danger">Admin</span>
                                                {% else %}
                                                    <span class="badge bg-primary">Client</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>{{ client.email }}</td>
                                <td>
                                    <span class="badge bg-info">
                                        {# Vérifier si la propriété accounts existe #}
                                        {% if client.accounts is defined %}
                                            {{ client.accounts|length }}
                                        {% else %}
                                            0
                                        {% endif %}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        {# Vérifier si la propriété transactions existe #}
                                        {% if client.transactions is defined %}
                                            {{ client.transactions|length }}
                                        {% else %}
                                            0
                                        {% endif %}
                                    </span>
                                </td>
                                <td>
                                    {# Date d'inscription - utiliser createdAt #}
                                    {{ client.createdAt|date('d/m/Y') }}
                                </td>
                              
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Aucun client inscrit</h4>
                    <p class="text-muted">Les clients apparaîtront ici après leur inscription.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}