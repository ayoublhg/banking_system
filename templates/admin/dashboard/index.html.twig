{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin • Banking System{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .stat-card {
            transition: transform 0.3s;
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
        .table-hover tbody tr:hover {
            background-color: rgba(102, 126, 234, 0.05);
        }
        .action-buttons .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 fw-bold mb-1">
                <i class="fas fa-tachometer-alt text-primary me-2"></i>Tableau de bord
            </h1>
            <p class="text-muted mb-0">Gestion complète de la plateforme bancaire</p>
        </div>
        <div>
            <span class="badge bg-danger fs-6">
                <i class="fas fa-user-shield me-1"></i> Administrateur
            </span>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-5">
        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                            <i class="fas fa-users"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">{{ clientsCount }}</h3>
                            <p class="text-muted mb-0">Clients</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="{{ path('admin_clients') }}" class="text-primary text-decoration-none small">
                        <i class="fas fa-arrow-right me-1"></i> Voir tous les clients
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                            <i class="fas fa-cogs"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">{{ servicesCount }}</h3>
                            <p class="text-muted mb-0">Services</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="{{ path('admin_services') }}" class="text-success text-decoration-none small">
                        <i class="fas fa-arrow-right me-1"></i> Gérer les services
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                            <i class="fas fa-exchange-alt"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">{{ transactionsCount }}</h3>
                            <p class="text-muted mb-0">Transactions</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="#" class="text-info text-decoration-none small">
                        <i class="fas fa-arrow-right me-1"></i> Voir les transactions
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card stat-card border-0">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                            <i class="fas fa-euro-sign"></i>
                        </div>
                        <div>
                            <h3 class="mb-0">€45,230</h3>
                            <p class="text-muted mb-0">Actifs totaux</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="#" class="text-warning text-decoration-none small">
                        <i class="fas fa-arrow-right me-1"></i> Rapports financiers
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Transactions -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-history text-primary me-2"></i>Dernières transactions
                    </h5>
                </div>
                <div class="card-body">
                    {% if recentTransactions|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Client</th>
                                        <th>Type</th>
                                        <th>Montant</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for transaction in recentTransactions %}
                                    <tr>
                                        <td>{{ transaction.createdAt|date('d/m H:i') }}</td>
                                        <td>
                                            <a href="{{ path('admin_client_show', {'id': transaction.client.id}) }}" 
                                               class="text-decoration-none">
                                                {{ transaction.client.prenom }} {{ transaction.client.nom }}
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge {{ transaction.type == 'deposit' ? 'bg-success' : 'bg-danger' }}">
                                                {{ transaction.typeLabel }}
                                            </span>
                                        </td>
                                        <td class="{{ transaction.type == 'deposit' ? 'text-success' : 'text-danger' }}">
                                            {{ transaction.formattedAmount }}
                                        </td>
                                        <td>{{ transaction.description|default('N/A')|slice(0, 30) }}...</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucune transaction récente</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt text-warning me-2"></i>Actions rapides
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('admin_services') }}" class="btn btn-outline-primary text-start">
                            <i class="fas fa-cogs me-2"></i> Gérer les services
                        </a>
                        <a href="{{ path('admin_clients') }}" class="btn btn-outline-success text-start">
                            <i class="fas fa-users me-2"></i> Gérer les clients
                        </a>
                        <a href="{{ path('admin_service_new') }}" class="btn btn-outline-info text-start">
                            <i class="fas fa-plus-circle me-2"></i> Créer un service
                        </a>
                        <a href="#" class="btn btn-outline-warning text-start">
                            <i class="fas fa-chart-bar me-2"></i> Rapports financiers
                        </a>
                        <a href="#" class="btn btn-outline-danger text-start">
                            <i class="fas fa-cog me-2"></i> Paramètres système
                        </a>
                    </div>
                </div>
            </div>

            <!-- System Info -->
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-info me-2"></i>Informations système
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Administrateur connecté</small>
                        <strong>{{ app.user.email }}</strong>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Dernière connexion</small>
                        <strong>{{ "now"|date("d/m/Y H:i") }}</strong>
                    </div>
                    <div>
                        <small class="text-muted d-block">Statut du système</small>
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle me-1"></i> Tous les services opérationnels
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}