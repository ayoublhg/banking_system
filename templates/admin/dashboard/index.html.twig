{% extends 'base.html.twig' %}

{% block title %}Tableau de bord • Banking System{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 fw-bold mb-1">
                <i class="fas fa-tachometer-alt text-primary me-2"></i>Tableau de bord
            </h1>
            <p class="text-muted mb-0">Aperçu général du système bancaire</p>
        </div>
        <div class="btn-group">
            <a href="{{ path('admin_transactions') }}" class="btn btn-outline-primary">
                <i class="fas fa-exchange-alt me-2"></i> Voir toutes les transactions
            </a>
            <a href="{{ path('admin_financial_reports') }}" class="btn btn-outline-success">
                <i class="fas fa-chart-line me-2"></i> Rapports financiers
            </a>
        </div>
    </div>

    <!-- Cartes de statistiques -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Clients
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ clientsCount|number_format(0, ',', ' ') }}
                            </div>
                            <div class="mt-2">
                                <a href="#" class="small text-primary">Voir tous →</a>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Solde total
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ financialStats.total_balance|number_format(2, ',', ' ') }} €
                            </div>
                            <div class="mt-2">
                                <span class="small text-success">
                                    <i class="fas fa-arrow-up me-1"></i>
                                    {{ financialStats.total_deposits|number_format(2, ',', ' ') }} € de dépôts
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-euro-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Comptes actifs
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ financialStats.active_accounts_count }}
                            </div>
                            <div class="mt-2">
                                <span class="small text-info">
                                    <i class="fas fa-chart-line me-1"></i>
                                    Revenus mensuels: {{ financialStats.total_monthly_service_revenue|number_format(2, ',', ' ') }} €
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Transactions
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                {{ transactionsCount|number_format(0, ',', ' ') }}
                            </div>
                            <div class="mt-2">
                                <span class="small text-warning">
                                    <i class="fas fa-exchange-alt me-1"></i>
                                    {{ financialStats.total_withdrawals|number_format(2, ',', ' ') }} € de retraits
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exchange-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Deuxième ligne : Graphiques et listes -->
    <div class="row">
        <!-- Transactions récentes -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="fas fa-history text-primary me-2"></i>Transactions récentes
                    </h6>
                    <a href="{{ path('admin_transactions') }}" class="btn btn-sm btn-outline-primary">
                        Voir tout
                    </a>
                </div>
                <div class="card-body">
                    {% if recentTransactions|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for transaction in recentTransactions %}
                            <div class="list-group-item border-0 px-0 py-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">
                                            <span class="badge {{ transaction.type == 'deposit' ? 'bg-success' : 'bg-danger' }} me-2">
                                                {{ transaction.type == 'deposit' ? '+' : '-' }}
                                            </span>
                                            {{ transaction.description|default('Transaction') }}
                                        </h6>
                                        <small class="text-muted">
                                            <i class="fas fa-user me-1"></i>
                                            {{ transaction.client.firstName }} {{ transaction.client.lastName }}
                                            •
                                            <i class="fas fa-clock me-1"></i>
                                            {{ transaction.createdAt|date('H:i') }}
                                        </small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold {{ transaction.type == 'deposit' ? 'text-success' : 'text-danger' }}">
                                            {{ transaction.type == 'deposit' ? '+' : '-' }}{{ transaction.amount }} €
                                        </div>
                                        <small class="text-muted">
                                            {{ transaction.createdAt|date('d/m/Y') }}
                                        </small>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucune transaction récente</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Services populaires -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar text-success me-2"></i>Services
                    </h6>
                    <a href="{{ path('admin_services') }}" class="btn btn-sm btn-outline-success">
                        Gérer
                    </a>
                </div>
                <div class="card-body">
                    {% if topServices|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for service in topServices %}
                            <div class="list-group-item border-0 px-0 py-2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">{{ service.name }}</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-euro-sign me-1"></i>
                                            {{ service.price }} €/mois
                                            {% if service.clients is defined and service.clients|length > 0 %}
                                                • <i class="fas fa-users me-1"></i>
                                                {{ service.clients|length }} client(s)
                                            {% endif %}
                                        </small>
                                    </div>
                                    <div>
                                        <span class="badge {{ service.isActive ? 'bg-success' : 'bg-secondary' }}">
                                            {{ service.isActive ? 'Actif' : 'Inactif' }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="text-center py-4">
                            <i class="fas fa-cogs fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Aucun service actif</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Boutons d'action -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title mb-4">Actions rapides</h5>
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <a href="{{ path('admin_transactions') }}" class="btn btn-primary btn-lg">
                            <i class="fas fa-exchange-alt me-2"></i>
                            Transactions
                            <span class="badge bg-light text-primary ms-2">{{ transactionsCount }}</span>
                        </a>
                        
                        <a href="{{ path('admin_financial_reports') }}" class="btn btn-success btn-lg">
                            <i class="fas fa-chart-line me-2"></i>
                            Rapports financiers
                            <span class="badge bg-light text-success ms-2">
                                {{ financialStats.total_balance|number_format(0, ',', ' ') }} €
                            </span>
                        </a>
                        
                        <a href="{{ path('admin_services') }}" class="btn btn-info btn-lg">
                            <i class="fas fa-cogs me-2"></i>
                            Services
                            <span class="badge bg-light text-info ms-2">{{ servicesCount }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}