{% extends 'base.html.twig' %}

{% block title %}Rapports Financiers • Banking System{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item active">Rapports financiers</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 fw-bold mb-1">
                <i class="fas fa-chart-line text-success me-2"></i>Rapports financiers
            </h1>
            <p class="text-muted mb-0">Analyse et statistiques financières</p>
        </div>
        <div class="btn-group">
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Retour
            </a>
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exportModal">
                <i class="fas fa-download me-2"></i> Exporter
            </button>
        </div>
    </div>

    <!-- Filtres de période -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title mb-3">
                <i class="fas fa-calendar-alt me-2"></i>Période d'analyse
            </h5>
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label for="start_date" class="form-label">Date de début</label>
                    <input type="date" class="form-control" id="start_date" name="start_date" 
                           value="{{ startDate|date('Y-m-d') }}">
                </div>
                <div class="col-md-3">
                    <label for="end_date" class="form-label">Date de fin</label>
                    <input type="date" class="form-control" id="end_date" name="end_date" 
                           value="{{ endDate|date('Y-m-d') }}">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i>Filtrer
                    </button>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <a href="{{ path('admin_financial_reports') }}" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-redo me-2"></i>Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Cartes de synthèse -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-muted small">Solde total</div>
                            <div class="h4 mb-0 fw-bold text-primary">
                                {{ financialStats.total_balance|number_format(2, ',', ' ') }} €
                            </div>
                        </div>
                        <div class="text-primary">
                            <i class="fas fa-euro-sign fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span class="text-success small">
                            <i class="fas fa-arrow-up me-1"></i>
                            {{ financialStats.total_deposits|number_format(2, ',', ' ') }} € de dépôts
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-muted small">Flux net</div>
                            <div class="h4 mb-0 fw-bold text-success">
                                {{ detailedReport.net_flow|number_format(2, ',', ' ') }} €
                            </div>
                        </div>
                        <div class="text-success">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span class="text-muted small">
                            Période: {{ startDate|date('d/m/Y') }} - {{ endDate|date('d/m/Y') }}
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-muted small">Transactions</div>
                            <div class="h4 mb-0 fw-bold text-info">
                                {{ detailedReport.transactions.total_transactions }}
                            </div>
                        </div>
                        <div class="text-info">
                            <i class="fas fa-exchange-alt fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span class="text-info small">
                            {{ detailedReport.transactions.deposits|number_format(2, ',', ' ') }} € dépôts
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-muted small">Revenus services</div>
                            <div class="h4 mb-0 fw-bold text-warning">
                                {{ detailedReport.service_revenue|number_format(2, ',', ' ') }} €
                            </div>
                        </div>
                        <div class="text-warning">
                            <i class="fas fa-cogs fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-2">
                        <span class="text-warning small">
                            Mensuel
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tableau détaillé -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-table me-2"></i>Détails financiers
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Métrique</th>
                                    <th>Valeur</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Solde total</strong></td>
                                    <td class="fw-bold text-primary">{{ financialStats.total_balance|number_format(2, ',', ' ') }} €</td>
                                    <td>Solde combiné de tous les comptes actifs</td>
                                </tr>
                                <tr>
                                    <td><strong>Dépôts totaux</strong></td>
                                    <td class="fw-bold text-success">{{ detailedReport.transactions.deposits|number_format(2, ',', ' ') }} €</td>
                                    <td>Total des dépôts sur la période</td>
                                </tr>
                                <tr>
                                    <td><strong>Retraits totaux</strong></td>
                                    <td class="fw-bold text-danger">{{ detailedReport.transactions.withdrawals|number_format(2, ',', ' ') }} €</td>
                                    <td>Total des retraits sur la période</td>
                                </tr>
                                <tr>
                                    <td><strong>Flux net</strong></td>
                                    <td class="fw-bold {{ detailedReport.net_flow >= 0 ? 'text-success' : 'text-danger' }}">
                                        {{ detailedReport.net_flow|number_format(2, ',', ' ') }} €
                                    </td>
                                    <td>Différence entre dépôts et retraits</td>
                                </tr>
                                <tr>
                                    <td><strong>Comptes actifs</strong></td>
                                    <td class="fw-bold">{{ financialStats.active_accounts_count }}</td>
                                    <td>Nombre de comptes bancaires actifs</td>
                                </tr>
                                <tr>
                                    <td><strong>Nouveaux comptes</strong></td>
                                    <td class="fw-bold">{{ detailedReport.new_accounts }}</td>
                                    <td>Comptes créés sur la période</td>
                                </tr>
                                <tr>
                                    <td><strong>Revenus services</strong></td>
                                    <td class="fw-bold text-warning">{{ detailedReport.service_revenue|number_format(2, ',', ' ') }} €</td>
                                    <td>Revenus mensuels des services actifs</td>
                                </tr>
                                <tr>
                                    <td><strong>Transactions totales</strong></td>
                                    <td class="fw-bold">{{ detailedReport.transactions.total_transactions }}</td>
                                    <td>Nombre total de transactions sur la période</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Répartition
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <!-- Graphique simple -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Dépôts</span>
                                <span class="fw-bold text-success">{{ detailedReport.transactions.deposits|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="progress" style="height: 20px;">
                                {% set total = detailedReport.transactions.deposits + detailedReport.transactions.withdrawals %}
                                {% set depositPercent = total > 0 ? (detailedReport.transactions.deposits / total) * 100 : 0 %}
                                <div class="progress-bar bg-success" style="width: {{ depositPercent }}%"></div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Retraits</span>
                                <span class="fw-bold text-danger">{{ detailedReport.transactions.withdrawals|number_format(2, ',', ' ') }} €</span>
                            </div>
                            <div class="progress" style="height: 20px;">
                                {% set total = detailedReport.transactions.deposits + detailedReport.transactions.withdrawals %}
                                {% set withdrawalPercent = total > 0 ? (detailedReport.transactions.withdrawals / total) * 100 : 0 %}
                                <div class="progress-bar bg-danger" style="width: {{ withdrawalPercent }}%"></div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <h6 class="mb-3">Recommandations</h6>
                        <div class="alert {{ detailedReport.net_flow >= 0 ? 'alert-success' : 'alert-warning' }}">
                            <i class="fas {{ detailedReport.net_flow >= 0 ? 'fa-thumbs-up' : 'fa-exclamation-triangle' }} me-2"></i>
                            {% if detailedReport.net_flow >= 0 %}
                                Flux net positif. Excellente santé financière.
                            {% else %}
                                Flux net négatif. Surveiller les retraits.
                            {% endif %}
                        </div>
                        
                        <!-- Afficher un message si pas de transactions -->
                        {% if detailedReport.transactions.total_transactions == 0 %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            Aucune transaction sur cette période ({{ startDate|date('d/m/Y') }} - {{ endDate|date('d/m/Y') }}).
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal d'export -->
<div class="modal fade" id="exportModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Exporter le rapport</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="exportForm" method="get" action="{{ path('admin_export_financial_report') }}">
                    <input type="hidden" name="start_date" value="{{ startDate|date('Y-m-d') }}">
                    <input type="hidden" name="end_date" value="{{ endDate|date('Y-m-d') }}">
                    
                    <div class="mb-3">
                        <label class="form-label">Format d'export</label>
                        <select class="form-select" name="format">
                            <option value="csv">CSV (Excel)</option>
                        </select>
                    </div>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Le rapport sera exporté au format CSV compatible avec Microsoft Excel.
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="submit" form="exportForm" class="btn btn-primary">
                    <i class="fas fa-download me-2"></i>Exporter
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}