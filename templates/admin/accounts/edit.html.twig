{% extends 'base.html.twig' %}

{% block title %}Modifier Compte • {{ account.accountNumber }} • Banking System{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_accounts') }}">Comptes</a></li>
            <li class="breadcrumb-item"><a href="{{ path('admin_account_show', {'id': account.id}) }}">{{ account.accountNumber }}</a></li>
            <li class="breadcrumb-item active">Modifier</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-edit text-primary me-2"></i>
                        Modifier le compte {{ account.accountNumber }}
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('admin_account_edit', {'id': account.id}) }}">
                        <div class="mb-3">
                            <label class="form-label">Numéro de compte</label>
                            <input type="text" class="form-control" value="{{ account.accountNumber }}" disabled>
                            <div class="form-text">Le numéro de compte ne peut pas être modifié.</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Type de compte</label>
                            <select name="type" class="form-select" required>
                                <option value="checking" {% if account.type == 'checking' %}selected{% endif %}>Compte Courant</option>
                                <option value="savings" {% if account.type == 'savings' %}selected{% endif %}>Compte Épargne</option>
                                <option value="business" {% if account.type == 'business' %}selected{% endif %}>Compte Professionnel</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Limite de découvert (€)</label>
                            <input type="number" name="overdraftLimit" class="form-control" 
                                   value="{{ account.overdraftLimit }}" step="0.01" min="0" required>
                            <div class="form-text">Montant maximum autorisé en découvert.</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Client</label>
                            <input type="text" class="form-control" 
                                   value="{{ account.client.firstName }} {{ account.client.lastName }}" disabled>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('admin_account_show', {'id': account.id}) }}" 
                               class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i> Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}