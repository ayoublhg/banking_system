{% extends 'base.html.twig' %}

{% block title %}Banking System - Your Secure Financial Partner{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 100px 0;
            margin-bottom: 50px;
        }
        .feature-icon {
            width: 80px;
            height: 80px;
            background: rgba(102, 126, 234, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }
        .stat-card {
            transition: transform 0.3s;
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }
        .stat-card:hover {
            transform: translateY(-10px);
        }
        .service-card {
            transition: all 0.3s;
            border: 1px solid #e9ecef;
        }
        .service-card:hover {
            border-color: #667eea;
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.15);
        }
        .btn-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            color: white;
        }
        .btn-gradient:hover {
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }
        .hero-icon {
            font-size: 5rem;
            margin-bottom: 20px;
            opacity: 0.9;
        }
        /* Style spécifique pour admin */
        .admin-hero-buttons .btn {
            opacity: 0.7;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-lg-10 col-xl-8">
                    <div class="mb-4">
                        <i class="fas fa-university hero-icon"></i>
                    </div>
                    <h1 class="display-4 fw-bold mb-4">
                        Smart Banking<br>
                        <span class="text-warning">For Modern Life</span>
                    </h1>
                    <p class="lead mb-4 opacity-75">
                        Manage your finances securely from anywhere. Open accounts, transfer money, 
                        and track expenses with our state-of-the-art banking platform.
                    </p>
                    <div class="d-flex gap-3 justify-content-center {% if is_granted('ROLE_ADMIN') %}admin-hero-buttons{% endif %}">
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <!-- Boutons masqués pour admin -->
                                <a href="{{ path('admin_dashboard') }}" class="btn btn-light btn-lg px-4">
                                    <i class="fas fa-tachometer-alt me-2"></i> Admin Dashboard
                                </a>
                            {% else %}
                                <!-- Boutons normaux pour les utilisateurs -->
                                <a href="{{ path('client_accounts') }}" class="btn btn-light btn-lg px-4">
                                    <i class="fas fa-wallet me-2"></i> My Accounts
                                </a>
                                <a href="{{ path('client_transactions_index') }}" class="btn btn-outline-light btn-lg px-4">
                                    <i class="fas fa-exchange-alt me-2"></i> Transactions
                                </a>
                            {% endif %}
                        {% else %}
                            <!-- Boutons pour visiteurs non connectés -->
                            <a href="{{ path('app_register') }}" class="btn btn-light btn-lg px-4">
                                <i class="fas fa-user-plus me-2"></i> Open Account
                            </a>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-lg px-4">
                                <i class="fas fa-sign-in-alt me-2"></i> Sign In
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section (for logged in users) -->
    {% if app.user and stats is defined %}
    <div class="container mb-5">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card stat-card text-center py-4">
                    <div class="card-body">
                        <div class="feature-icon">
                            <i class="fas fa-wallet fa-2x text-primary"></i>
                        </div>
                        <h3 class="display-6 fw-bold text-primary">{{ stats.accountCount }}</h3>
                        <p class="text-muted mb-0">Active Accounts</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card text-center py-4">
                    <div class="card-body">
                        <div class="feature-icon">
                            <i class="fas fa-money-bill-wave fa-2x text-success"></i>
                        </div>
                        <h3 class="display-6 fw-bold text-success">{{ stats.totalBalance|number_format(2, ',', ' ') }} €</h3>
                        <p class="text-muted mb-0">Total Balance</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card stat-card text-center py-4">
                    <div class="card-body">
                        <div class="feature-icon">
                            <i class="fas fa-chart-line fa-2x text-info"></i>
                        </div>
                        <h3 class="display-6 fw-bold text-info">{{ stats.activeAccounts }}</h3>
                        <p class="text-muted mb-0">Active Services</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Features Section -->
    <section class="py-5">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="h1 fw-bold mb-3">Why Choose Our Bank?</h2>
                <p class="lead text-muted">We provide innovative solutions for all your banking needs</p>
            </div>
            
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 service-card p-4">
                        <div class="feature-icon">
                            <i class="fas fa-shield-alt fa-2x text-primary"></i>
                        </div>
                        <h4 class="my-3">Bank-Level Security</h4>
                        <p class="text-muted">
                            Your data is protected with 256-bit encryption and multi-factor authentication.
                            We use the same security standards as major financial institutions.
                        </p>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> End-to-end encryption</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Fraud monitoring 24/7</li>
                            <li><i class="fas fa-check text-success me-2"></i> SSL secure connections</li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 service-card p-4">
                        <div class="feature-icon">
                            <i class="fas fa-mobile-alt fa-2x text-success"></i>
                        </div>
                        <h4 class="my-3">Mobile Banking</h4>
                        <p class="text-muted">
                            Access your accounts anytime, anywhere with our award-winning mobile app.
                            Transfer money, pay bills, and deposit checks with just a few taps.
                        </p>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> iOS & Android apps</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Mobile check deposit</li>
                            <li><i class="fas fa-check text-success me-2"></i> Instant notifications</li>
                        </ul>
                    </div>
                </div>
                
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 service-card p-4">
                        <div class="feature-icon">
                            <i class="fas fa-headset fa-2x text-info"></i>
                        </div>
                        <h4 class="my-3">24/7 Support</h4>
                        <p class="text-muted">
                            Get help whenever you need it. Our customer service team is available 
                            around the clock to assist with any questions or issues.
                        </p>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Live chat support</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Phone & email support</li>
                            <li><i class="fas fa-check text-success me-2"></i> Video tutorials</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="h1 fw-bold mb-3">Our Banking Services</h2>
                <p class="lead text-muted">Discover our range of financial products</p>
            </div>
            
            <div class="row g-4">
                {% for service in services %}
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 service-card">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                    <i class="fas fa-{{ service.icon|default('star') }} fa-lg text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-0">{{ service.name }}</h5>
                                    <p class="text-muted small mb-0">{{ service.price }} €/month</p>
                                </div>
                            </div>
                            <p class="card-text text-muted">{{ service.description|slice(0, 120) }}...</p>
                            <div class="mt-3">
                                <span class="badge bg-{{ service.isActive ? 'success' : 'secondary' }}">
                                    {{ service.isActive ? 'Available' : 'Coming Soon' }}
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">

                        </div>
                    </div>
                </div>
                {% else %}
                <div class="col-12 text-center py-5">
                    <i class="fas fa-coins fa-4x text-muted mb-3"></i>
                    <h4>No services available yet</h4>
                    <p class="text-muted">Check back soon for our latest financial products!</p>
                </div>
                {% endfor %}
            </div>
            
            {% if services|length > 0 %}
            <div class="text-center mt-5">
                <a href="{{ path('client_services') }}" class="btn btn-gradient btn-lg px-5">
                    <i class="fas fa-eye me-2"></i> View All Services
                </a>
            </div>
            {% endif %}
        </div>
    </section>

    <!-- SUPPRESSION COMPLÈTE DE LA SECTION CTA -->
    {# La section CTA a été supprimée comme demandé #}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Add some interactive effects
        document.addEventListener('DOMContentLoaded', function() {
            // Animate numbers if stats exist
            const stats = {{ stats|default([])|json_encode|raw }};
            if (stats && stats.accountCount > 0) {
                animateValue('accountCount', 0, stats.accountCount, 1000);
                animateValue('totalBalance', 0, stats.totalBalance, 1500);
                animateValue('activeAccounts', 0, stats.activeAccounts, 1000);
            }
            
            // Parallax effect for hero section
            window.addEventListener('scroll', function() {
                const scrolled = window.pageYOffset;
                const hero = document.querySelector('.hero-section');
                if (hero) {
                    hero.style.transform = 'translateY(' + (scrolled * 0.5) + 'px)';
                }
            });
        });
        
        function animateValue(elementId, start, end, duration) {
            const element = document.querySelector('[data-stat="' + elementId + '"]');
            if (!element) return;
            
            let startTimestamp = null;
            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                const value = Math.floor(progress * (end - start) + start);
                
                if (elementId === 'totalBalance') {
                    element.textContent = value.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,') + ' €';
                } else {
                    element.textContent = value;
                }
                
                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            window.requestAnimationFrame(step);
        }
    </script>
{% endblock %}