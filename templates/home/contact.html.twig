{% extends 'base.html.twig' %}

{% block title %}Contact • Banking System{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold mb-3">Contactez-nous</h1>
                <p class="lead text-muted">Nous sommes là pour vous aider. Contactez notre équipe.</p>
            </div>
            
            <div class="row g-4 mb-5">
                <div class="col-md-4 text-center">
                    <div class="bg-primary bg-opacity-10 p-4 rounded-3">
                        <i class="fas fa-phone fa-2x text-primary mb-3"></i>
                        <h5>Téléphone</h5>
                        <p class="text-muted mb-0">+33 1 23 45 67 89</p>
                        <small class="text-muted">Lun-Ven, 9h-18h</small>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="bg-success bg-opacity-10 p-4 rounded-3">
                        <i class="fas fa-envelope fa-2x text-success mb-3"></i>
                        <h5>Email</h5>
                        <p class="text-muted mb-0">support@bankingsystem.com</p>
                        <small class="text-muted">Réponse sous 24h</small>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <div class="bg-info bg-opacity-10 p-4 rounded-3">
                        <i class="fas fa-map-marker-alt fa-2x text-info mb-3"></i>
                        <h5>Bureau</h5>
                        <p class="text-muted mb-0">123 Rue de la Banque</p>
                        <small class="text-muted">Paris, France</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}